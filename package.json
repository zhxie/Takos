{
  "name": "takos",
  "version": "0.1.0",
  "description": "Cross-platform schedule and battle statistic client of Splatoon 2.",
  "homepage": "./",
  "license": "MIT",
  "author": {
    "name": "Sketch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhxie/takos.git"
  },
  "build": {
    "appId": "com.sketch.takos",
    "productName": "Takos",
    "copyright": "Copyright Â© 2019 ${author}",
    "directories": {
      "buildResources": "./assets"
    },
    "files": [
      "build/**/*",
      "!**/*.map"
    ],
    "extraFiles": [
      "./README.md",
      "./LICENSE"
    ],
    "win": {
      "target": [
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "zip"
      ],
      "icon": "./icons",
      "category": "Utility"
    },
    "afterPack": "./after-pack.js"
  },
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "antd": "^3.22.2",
    "electron-context-menu": "^0.15.0",
    "electron-is-dev": "^1.1.0",
    "http-proxy-middleware": "^0.20.0",
    "localforage": "^1.7.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-intl": "^3.3.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "electron": "electron .",
    "electron-dev": "concurrently \"cross-env BROWSER=none react-app-rewired start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-app-rewired build",
    "build-no-maps": "cross-env GENERATE_SOURCEMAP=false react-app-rewired build",
    "dist": "electron-builder",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-import": "^1.12.1",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "customize-cra": "^0.5.0",
    "electron": "^6.0.5",
    "electron-builder": "^21.2.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "react-app-rewired": "^2.1.3",
    "wait-on": "^3.3.0"
  }
}
